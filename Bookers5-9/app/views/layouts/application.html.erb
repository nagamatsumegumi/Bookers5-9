<!DOCTYPE html>
<html>

  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


<nav class="navbar navbar-inverse">
<div class="container">
  <nav class="nav navbar-brand">
      <span>Bookers</span>
  </nav>

    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>

          <li><%= link_to 'Home', user_path(current_user.id), class: "user_#{current_user.id} glyphicon glyphicon-home" %></li>
          <li><%= link_to 'Users', users_path, class: "users glyphicon glyphicon-user" %></li>
          <li><%= link_to 'Books', books_path, class: "books glyphicon glyphicon-book" %></li>
          <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "logout glyphicon glyphicon-log-in" %></li>

      <% else %>

          <li><%= link_to 'Home', root_path, class: "home glyphicon glyphicon-home" %></li>
          <li><%= link_to 'About', top_path, class: "about glyphicon glyphicon-link" %></li>
          <li><%= link_to "sign  up", new_user_registration_path, class: "sign_up glyphicon glyphicon-edit" %></li>
          <li><%= link_to "login", new_user_session_path, class: "sign_in glyphicon glyphicon-log-in" %></li>

      <% end %>
    </ul>
</div>
</nav>

  </head>

   <body>
    <div class="container">
      <% flash.each do |key, value| %>
          <span class="text-success">
      <%= content_tag(:div, value, class: "#{key}") %>
          </span>
      <% end %>
    </div>
   </body>

  <body>
    <div class="container">
    <%= yield %>
    <footer>
      <div class="text-right"><p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </div>
  </body>
</html>
